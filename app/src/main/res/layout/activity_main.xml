<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.cameraapplication.MainActivity"
    android:background="@drawable/camera_background"
    >

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galleryRecyclerView"
        android:layout_alignParentTop="true"
        android:background="@drawable/border1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/capture_camera70_70"
        android:drawableStart="@drawable/capture_camera70_70"
        android:background="#fffafa"

        android:layout_marginBottom="14dp"
        android:layout_alignBottom="@+id/galleryRecyclerView"
        android:layout_toLeftOf="@+id/btnUpload"
        android:layout_toStartOf="@+id/btnUpload"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/cloud_upload50_50"
        android:drawableStart="@drawable/cloud_upload50_50"
        android:background="#fffafa"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_alignBaseline="@+id/btnTakePhoto"
        android:layout_alignBottom="@+id/btnTakePhoto"
        android:layout_alignRight="@+id/galleryRecyclerView"
        android:layout_alignEnd="@+id/galleryRecyclerView" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cup_tha"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/btnTakePhoto"
        android:layout_alignLeft="@+id/galleryRecyclerView"
        android:layout_alignStart="@+id/galleryRecyclerView" />

</RelativeLayout>
